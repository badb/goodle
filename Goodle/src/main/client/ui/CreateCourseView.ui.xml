<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
			 
	<ui:style src="../../../css/Goodle.css"/>
			 
	<g:TabLayoutPanel barUnit="PX" barHeight="20" ui:field="tabPanel">	
	    <g:tab>
	        <g:header>Utwórz nowy kurs</g:header>
	        <g:VerticalPanel>
	        <g:Label text="Nazwa kursu:" />
	        <g:HorizontalPanel>
	            <g:TextBox ui:field="courseNameBox" />    
	            <g:ListBox ui:field="courseYearBox" />
	            <g:ListBox ui:field="courseTermBox">
	                <g:item value="Z">Z</g:item>
	                <g:item value="L">L</g:item>
	                <g:item value=""></g:item>
	            </g:ListBox>
	        </g:HorizontalPanel>
			<g:Label text="Opis kursu:"/>
			<g:TextArea ui:field="courseDescBox" />
			<g:Label text="Prowadzący:" />
			<!-- <c:CellList ui:field="teacherList" /> -->
			<g:Label text="Kursanci:" />
		    <!--  <c:CellTree ui:field="memberList" />  -->
			<g:Label text="Sposób rejestracji:" />
			<g:RadioButton ui:name="regMethod" ui:text="Otwarty" />
			<g:Label text="Wszyscy mogą się zarejestrować." />
			<g:RadioButton ui:name="regMethod" ui:text="Za zgodą prowadzącego" />
			<g:Label text="Prowadzący dostanie wiadomość z prośbą o rejestrację" />
			<g:RadioButton ui:name="regMethod" ui:text="Zabezpiecznony hasłem" />
			<g:HorizontalPanel>
				<g:Label text="Rejestracja tylko po podaniu hasła" />		   
			    <g:TextBox ui:field="coursePassword" />
			</g:HorizontalPanel>	
			<g:Button ui:field="saveButton" text="Zatwierdź" />
			</g:VerticalPanel>
	    </g:tab>
	    <g:tab ui:field="tab2">
	        <g:header >Pobierz kurs z USOS</g:header>
	        <g:Label text="Pobierz kurs..." />
	    </g:tab>
	</g:TabLayoutPanel>
			 
</ui:UiBinder>