<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../resources/Goodle.css"/>

        <g:FlowPanel width="100%">

	        <g:Button ui:field="save" text="Zapisz zmiany" styleName="{style.courseButton}" />
	        <g:Button ui:field="cancel" text="Anuluj" styleName="{style.courseButton}"/>
		<g:FlowPanel width="100%">
			<g:Label ui:field="info" />
			<g:VerticalPanel styleName="{style.outerBox}">
			<g:Button ui:field="newHomework" text="Dodaj zadanie" styleName="{style.addButton}"/>
			
			<g:FlexTable width="100%" ui:field="homeworks"/>
			</g:VerticalPanel>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 