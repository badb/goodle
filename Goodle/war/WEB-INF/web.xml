<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
<servlet>
    <servlet-name>CourseServiceImpl</servlet-name>
    <servlet-class>main.server.CourseServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CourseServiceImpl</servlet-name>
    <url-pattern>/goodle/course</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <servlet>
    <servlet-name>goodleServlet</servlet-name>
  	<servlet-class>main.server.GoodleServiceImpl</servlet-class>
  </servlet>
  <welcome-file-list>
    <welcome-file>Goodle.html</welcome-file>
  </welcome-file-list>
  
  <servlet-mapping>
  	<servlet-name>goodleServlet</servlet-name>
  	<url-pattern>/goodle/goodle</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>blobServlet</servlet-name>
    <servlet-class>main.server.BlobServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>uploadServlet</servlet-name>
    <servlet-class>main.server.UploadServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>blobServlet</servlet-name>
    <url-pattern>/goodle/blobservice</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>uploadServlet</servlet-name>
    <url-pattern>/goodle/uploadservice</url-pattern>
  </servlet-mapping>
  
  
</web-app>
