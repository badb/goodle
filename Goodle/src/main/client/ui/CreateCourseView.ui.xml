<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:my="urn:import:main.client.util">
			 
	<ui:style src="../../../css/Goodle.css"/>
		<g:VerticalPanel styleName="{style.mainView}">
			<g:HorizontalPanel styleName="{style.tabBefore}">
			<g:HorizontalPanel styleName="{style.tabs}">
				<g:SimplePanel styleName="{style.tabBegin}"/>
	        <g:Label ui:field="createLabel" styleName="{style.tab}">Utwórz nowy kurs</g:Label>
	        <g:Label ui:field="importLabel" styleName="{style.tab}">Importuj</g:Label>
	        </g:HorizontalPanel>
	        <g:SimplePanel styleName="{style.tabEnd}"/>
	        </g:HorizontalPanel>
	        <g:VerticalPanel ui:field="createView" styleName="{style.insideMainView}">
	        <g:Label text="Nazwa kursu:" styleName="{style.blabel}"/>
	        <g:HorizontalPanel>
	            <g:TextBox ui:field="courseNameBox" styleName="{style.courseBox}" />    
	            <g:ListBox ui:field="courseYearBox" />
	            <g:ListBox ui:field="courseTermBox">
	                <g:item value="Z">Z</g:item>
	                <g:item value="L">L</g:item>
	                <g:item value=""></g:item>
	            </g:ListBox>
	        </g:HorizontalPanel>
			<g:Label text="Opis kursu:" styleName="{style.blabel}"/>
			<g:TextArea ui:field="courseDescBox" styleName="{style.courseDescBox}"/>
			<g:Label text="Sposób rejestracji:" styleName="{style.blabel}"/>
			<g:RadioButton ui:field="regMethod1" ui:name="regMethod" ui:text="Otwarty" styleName="{style.mlabel}"/>
			<g:Label text="Wszyscy mogą się zarejestrować." styleName="{style.slabel}"/>
			<g:RadioButton ui:field="regMethod2" ui:name="regMethod" ui:text="Za zgodą prowadzącego" styleName="{style.mlabel}"/>
			<g:Label text="Prowadzący dostanie wiadomość z prośbą o rejestrację" styleName="{style.slabel}"/>
			<g:RadioButton ui:field="regMethod3" ui:name="regMethod" ui:text="Zabezpieczony hasłem" styleName="{style.mlabel}"/>
			<g:HorizontalPanel>
				<g:Label text="Rejestracja tylko po podaniu hasła" styleName="{style.slabel}"/>		   
			    <g:TextBox ui:field="coursePasswordBox" />
			</g:HorizontalPanel>	
			<g:Button ui:field="saveButton" text="Zatwierdź" />
			</g:VerticalPanel>
	</g:VerticalPanel>		
</ui:UiBinder>

