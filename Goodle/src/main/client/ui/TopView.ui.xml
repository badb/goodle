<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../../../css/Goodle.css"/>
	
	<g:HorizontalPanel>
		<g:Image ui:field="goodleLogo" 
				url="https://lh4.googleusercontent.com/-wExWcPGyGMg/T4YZvdm8j_I/AAAAAAAAALs/s-OGfjz7Mcw/s151/Goodle.jpg" 
		/>
		<g:HorizontalPanel>
			<g:TextBox styleName='{style.searchBox}' ui:field="searchBox"/>
			<g:Button  styleName='{style.searchButton}' ui:field="searchButton" text="Szukaj" />
		</g:HorizontalPanel>
		<g:HorizontalPanel>
		 	<g:Image
		 		styleName='{style.userImage}' 
		 		ui:field="userImage"
		 		url="http://userserve-ak.last.fm/serve/34s/66112340.jpg"
		 	/>
		 	<g:Label
		 		styleName='{style.userName}' 
		 		ui:field="userName" text="Hermiona Granger"/>
		</g:HorizontalPanel>
		<g:Button styleName='{style.logoutButton}' ui:field="logoutButton" text="Logout" />
	</g:HorizontalPanel>

</ui:UiBinder>