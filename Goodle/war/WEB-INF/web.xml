<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- Servlets -->
	<servlet>
		<servlet-name>requestFactoryServlet</servlet-name>
		<servlet-class>com.google.web.bindery.requestfactory.server.RequestFactoryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>requestFactoryServlet</servlet-name>
		<url-pattern>/gwtRequest</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>uploadServiceImpl</servlet-name>
  		<servlet-class>main.server.UploadServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>uploadServiceImpl</servlet-name>
		<url-pattern>/goodle/uploadservice</url-pattern>
	</servlet-mapping>
         
	<servlet>
		<servlet-name>blobServiceImpl</servlet-name>
		<servlet-class>main.server.BlobServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>blobServiceImpl</servlet-name>
		<url-pattern>/goodle/blobservice</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Goodle.html</welcome-file>
	</welcome-file-list>

	<!-- Login is allway required -->
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
	<error-page>
	    <error-code>404</error-code>
	    <location>../web/Error404Page.html</location>
	</error-page>
	<error-page>
	    <error-code>500</error-code>
	    <location>../web/ErrorPage.html</location>
	</error-page>
	<error-page>
		    <error-code>503</error-code>
	    <location>../web/ErrorPage.html</location>
	</error-page>
</web-app>
