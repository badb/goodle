<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../resources/Goodle.css"/>
	
	<g:HorizontalPanel ui:field="horizontalPanel">
		<g:Label
			styleName='{style.logo}' 
			ui:field="goodleLogo" 
			text="Goodle" 
		/>
		<g:HorizontalPanel>
			<g:SuggestBox styleName='{style.searchBox}' ui:field="searchBox"/>
			<g:Button  styleName='{style.searchButton}' ui:field="searchButton" text="Szukaj" />
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName='{style.userBox}' ui:field="userBox">
		 	<g:Image
		 		styleName='{style.userImage}' 
		 		ui:field="userImage"
		 		url="https://lh4.googleusercontent.com/-wY7k1k1d85U/UD521hhvxqI/AAAAAAAAAPs/bUxkplgr9Wo/s800/avatar_empty.jpg"
		 	/>
		 	<g:Label
		 		styleName='{style.userName}' 
		 		ui:field="userName" text="Hermiona Granger"/>
		</g:HorizontalPanel>
		<g:Image
			ui:field="tabbar"
			url="https://lh6.googleusercontent.com/-i4xGmMwV_zE/T4k1ojX2rQI/AAAAAAAAAL0/gRLz7zFfUUE/s800/tabbar.png"
		/>
		<g:Button styleName='{style.logoutButton}' ui:field="logoutButton" />
	</g:HorizontalPanel>

</ui:UiBinder>